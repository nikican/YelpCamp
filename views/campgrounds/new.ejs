<%include ../partials/header%>
<div class="container">
    <div class="row">
    <h1 style="text-align:center">Create a new campground.</h1>
    <div style="width:40%; margin:40px auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" name="campground[name]" placeholder="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="campground[image]" placeholder="image URL" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="campground[description]" placeholder="description" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    </div>
</div>
<%include ../partials/footer%>