<%include ../partials/header%>
<div class="container">
    <div class="row">
    <h1 style="text-align:center">Add new comment to <%=campground.name%></h1>
    <div style="width:40%; margin:40px auto">
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" placeholder="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="comment[author]" placeholder="author" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    </div>
</div>
<%include ../partials/footer%>